<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.mera.detachedthemesapp.custom.CustButton
        android:id="@+id/custButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Custom Button view" />
    
    <EditText
        android:id="@+id/editText1"        android:layout_width="match_parent"
        android:layout_height="wrap_content"        android:layout_margin="10dp" />
    <TextView
        android:id="@+id/textView1"        android:layout_width="match_parent"
        android:layout_height="wrap_content"        android:layout_margin="10dp"
        android:text="TextView" />
    <Button
        android:id="@+id/button1"        android:layout_width="match_parent"
        android:layout_height="wrap_content"        android:layout_margin="10dp"
        android:text="Button" />
    <Spinner
        android:id="@+id/spinner1"        android:layout_width="match_parent"
        android:layout_height="wrap_content"        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="match_parent"        android:layout_height="match_parent"
        android:gravity="bottom"        android:orientation="vertical" >
        <Button
        	android:id="@+id/switch_button"        android:layout_width="match_parent"
        	android:layout_height="wrap_content"        android:layout_margin="10dp"
        	android:text="Switch theme" />
    </LinearLayout>

</LinearLayout>